<legend>Company "<span id="titleName"><%= model.name %></span>"</legend>
 <button class="btn btn-small" type="button" id="delete-button">
    <i class="icon-remove"></i> Delete and reset
</button>
<button class="btn btn-small" type="button" id="save-button">
    <i class="icon-ok"></i> Save
</button>
<hr>
<label>Name:</label>
<input id="nameInput" type="text" value="<%= model.name %>">
<br>
<label>Departments:</label>
<ul>
<% _.each(model.departments, function(d) {  %>
  <li>
    <a href="#departments/<%= d._id %>"><%= d.name %></a>
  </li>
<% }); %>
</ul>
